#!/usr/bin/tcsh

module load intel mpich gronor molcas mkl ga cmake

setenv FC mpif90
setenv CC mpicc
setenv CXX mpicxx
unsetenv MPI_ROOT

env | grep MKL
env | grep UTILS

rm -rf build
mkdir build
cd build

cmake -DOPENMP=ON -DCMAKE_INSTALL_PREFIX=/home/tps/Software/intel-2022.2.0/mpich-4.0.2/gronor/23.00 ../

make -j 12

make install

#cp bin/rotharm3 bin/rotharm

#cp bin/* /home/tps/Software/intel-2022.2.0/mpich-4.0.2/gronor/23.00/bin
